<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#43AE47"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/app_auth"
        android:layout_width="358dp"
        android:layout_height="65dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/aldrich"
        android:gravity="center"
        android:text="@string/auth_name"
        android:textColor="#050505"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_by" />

    <TextView
        android:id="@+id/app_by"
        android:layout_width="358dp"
        android:layout_height="65dp"
        android:fontFamily="@font/aldrich"
        android:gravity="center"
        android:text="BY"
        android:textColor="#050505"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_name" />

    <ImageView
        android:id="@+id/app_ico"
        android:layout_width="217dp"
        android:layout_height="224dp"
        android:layout_marginTop="84dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/app_icon" />

    <TextView
        android:id="@+id/app_name"
        android:layout_width="358dp"
        android:layout_height="65dp"
        android:layout_marginTop="148dp"
        android:fontFamily="@font/aldrich"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="#050505"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_ico" />
</androidx.constraintlayout.widget.ConstraintLayout>